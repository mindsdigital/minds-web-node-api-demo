<div class="modal_container" id="modalContainer">
    <div class="modal" id="modal">
        <div class="section-title">
            <h2>Transferência</h2>
            <hr>
                <form>
                    <div class="pickUserTransfer">Escolha para quem você deseja enviar recursos:</div>
                    <div class="selectFav">
                        <label for="userTo">Favoritos:</label>
                        <select id="userTo" name="userTo" autocomplete=false required>
                            <option value=""> --- </option>
                            <% data.listOfUsers.forEach((user)=> { %>
                                <option value="<%= user.username %>"><%= user.username %></option>
                                <% })%>
                        </select>
                        <span id="errorFavorite" class="errorLabel">Por favor, escolha o favorito para fazer a transferência</span>
                    </div>
                    <br />
                    <div>
                        <label for="amountTransfer">Valor:</label>
                        <input type="text" name="amountTransfer" id="amountTransfer" placeholder="Valor de Transferencia" autocomplete=false oninput="mascaraReais(event);" required>
                        <span id="errorValue" class="errorLabel">Por favor, preencha o campo de valor</span>
                    </div>
                    <div id="confirmationContainer">
                        <button type="button" id="startRecording">Iniciar gravação</button>

                        <div id="errorsMessage" style="margin-top: 30px;">
                            <svg class="w-6 h-6 text-gray-800 dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                                <path fill-rule="evenodd" d="M5 8c.6 0 1 .4 1 1v3a4 4 0 0 0 4 4h4a4 4 0 0 0 4-4V9a1 1 0 1 1 2 0v3a6 6 0 0 1-6 6h-1v2h2a1 1 0 1 1 0 2H9a1 1 0 1 1 0-2h2v-2h-1a6 6 0 0 1-6-6V9c0-.6.4-1 1-1Z" clip-rule="evenodd"/>
                                <path d="M7 6a4 4 0 0 1 4-4h2a4 4 0 0 1 4 4v5a4 4 0 0 1-4 4h-2a4 4 0 0 1-4-4V6Z"/>
                            </svg>
                            <span id="error" class="errorLabel"></span>
                        </div>

                        <span for="timeStamp" id="timeStamp" hidden>Time: 00:00:00</span>
                        <dotlottie-player id="audioWaveLottie" src="https://lottie.host/dac946d6-3229-4d3a-938f-7265b84fed74/twarfTLGTY.json" background="transparent" speed="1" style="height: 150px;" loop autoplay></dotlottie-player>
                        <button type="button" id="stopRecording" hidden>Enviar</button>

                        <label id="instructions-login">Grave pelo menos 4 segundos para realizar sua autenticação.</label>
                    </div>
                    <!-- <audio id="audioPlayer" controls>
                        Your browser does not support the audio element.
                    </audio> -->
                    <div class="double-buttons">
                        <button id="transferBtn" class="btn-main" type="button" onclick="makeTransfer()">Transferir</button>
                        <button id="cancelTranferBtn" type="button" onclick="closeModal()">Cancelar</button>
                    </div>
                </form>
        </div><!-- section-title-->
    </div>
</div>